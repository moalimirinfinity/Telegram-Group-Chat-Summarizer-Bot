# Telegram Bot Token (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Key (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Webhook URL for production deployment
# Example: https://your-app-name.onrender.com
WEBHOOK_URL=

# Optional: Custom webhook path (default is /webhook)
WEBHOOK_PATH=/webhook

# Optional: Secret token for webhook validation (highly recommended for production)
WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Model name (default is gemini-1.5-flash)
GEMINI_MODEL_NAME=gemini-1.5-flash

# Optional: Admin Chat ID for error notifications
ADMIN_CHAT_ID=

# Optional: API timeout in seconds (default is 30)
API_TIMEOUT_SECONDS=30

# Set to true for local development with auto-reload
DEVELOPMENT=false

# Set to true to ignore webhook errors on startup
IGNORE_WEBHOOK_ERRORS=false 